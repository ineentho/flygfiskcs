.content
  width 1000px
  background rgba(0,  0, 0, .85)
  margin 0 auto
  position relative
  top 200px
  height 500px

.header
  background linear-gradient(black, #293946 70%)
  width 100%
  height 60px

.header h1
  font-family Verdana, Geneva, sans-serif
  color #c4eefe
  font-size .9em
  padding-top 40px
  margin-top 0
  margin-left 5px

.scoreboard, .scoreboard table
  width 100%

.scoreboard
  overflow-y scroll
  height (500 - 60)px

.scoreboard tr td
  background rgba(123, 218, 254, 0.3)
  color #80b9e6
  text-shadow 2px 2px black
  transition .5s

.scoreboard tr th
  text-align left
  color gray
  font-weight 100
  background rgba(128, 128, 128, 0.18)

.scoreboard tr td.highlightGood
  background limegreen

.scoreboard tr td.highlightBad
  background #ff0000